@model PersonListModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-6">
        <h4>Kişi Bilgileri</h4>
        <p>
            Kişi Adı:@Model.PersonsFullName
        </p>
    </div>
    <div class="col-6">
        <form method="post" asp-action="Create" asp-controller="Information">
            <input type="hidden" name="PersonsID" value="@Model.Id" />
            <div class="mb-3">
                <label class="form-label">Ev Numarası:</label>
                <input type="number" class="form-control" name="HomePhone" />
            </div>
            <div class="mb-3">
                <label class="form-label">Cep Numarası:</label>
                <input type="number" class="form-control" name="MobileNumber" />
            </div>
            <div class="mb-3">
                <label class="form-label">Ofis Numarası:</label>
                <input type="number" class="form-control" name="OfficePhone" />
            </div>
            <div class="mb-3">
                <label class="form-label">Mail:</label>
                <input type="number" class="form-control" name="Mail" />
            </div>
            <div class="mb-3">
                <label class="form-label">Adres:</label>
                <input type="number" class="form-control" name="Adress" />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>

</div>